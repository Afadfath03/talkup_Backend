{
  "openapi": "3.0.0",
  "info": {
    "title": "TalkUp Backend API Documentation",
    "version": "1.0.0",
    "description": "Dokumentasi API untuk TalkUp Backend (Express + Sequelize)"
  },
  "servers": [
    {
      "url": "http://localhost:3000/api/v1",
      "description": "Local Development Server"
    }
  ],
  "tags": [
    {
      "name": "Example",
      "description": "Endpoint CRUD untuk data Example"
    }
  ],
  "paths": {
    "/example": {
      "get": {
        "summary": "Ambil semua data Example",
        "tags": ["Example"],
        "responses": {
          "200": {
            "description": "Berhasil mengambil semua data Example",
            "content": {
              "application/json": {
                "example": {
                  "status": "success",
                  "data": [
                    {
                      "id": 1,
                      "name": "Example 1",
                      "createdAt": "2025-10-14T08:00:00.000Z",
                      "updatedAt": "2025-10-14T08:00:00.000Z"
                    },
                    {
                      "id": 2,
                      "name": "Example 2",
                      "createdAt": "2025-10-14T08:00:00.000Z",
                      "updatedAt": "2025-10-14T08:00:00.000Z"
                    }
                  ]
                }
              }
            }
          }
        }
      },
      "post": {
        "summary": "Tambah data Example baru",
        "tags": ["Example"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["name"],
                "properties": {
                  "name": {
                    "type": "string",
                    "example": "Nama Example baru"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Data Example berhasil ditambahkan",
            "content": {
              "application/json": {
                "example": {
                  "status": "success",
                  "data": {
                    "id": 3,
                    "name": "Nama Example baru",
                    "createdAt": "2025-10-14T08:10:00.000Z",
                    "updatedAt": "2025-10-14T08:10:00.000Z"
                  }
                }
              }
            }
          },
          "400": {
            "description": "Input tidak valid",
            "content": {
              "application/json": {
                "example": {
                  "status": "error",
                  "message": "Field name wajib diisi"
                }
              }
            }
          }
        }
      }
    },
    "/example/{id}": {
      "get": {
        "summary": "Ambil data Example berdasarkan ID",
        "tags": ["Example"],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "description": "ID data Example yang ingin diambil",
            "schema": { "type": "integer", "example": 1 }
          }
        ],
        "responses": {
          "200": {
            "description": "Data Example ditemukan",
            "content": {
              "application/json": {
                "example": {
                  "status": "success",
                  "data": {
                    "id": 1,
                    "name": "Example 1",
                    "createdAt": "2025-10-14T08:00:00.000Z",
                    "updatedAt": "2025-10-14T08:00:00.000Z"
                  }
                }
              }
            }
          },
          "404": {
            "description": "Data tidak ditemukan",
            "content": {
              "application/json": {
                "example": {
                  "status": "error",
                  "message": "Example dengan ID tersebut tidak ditemukan"
                }
              }
            }
          }
        }
      },
      "patch": {
        "summary": "Perbarui data Example berdasarkan ID",
        "tags": ["Example"],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "integer", "example": 1 }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string",
                    "example": "Nama Example yang diperbarui"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Data Example berhasil diperbarui",
            "content": {
              "application/json": {
                "example": {
                  "status": "success",
                  "message": "Example berhasil diperbarui"
                }
              }
            }
          },
          "404": {
            "description": "Data tidak ditemukan",
            "content": {
              "application/json": {
                "example": {
                  "status": "error",
                  "message": "Example tidak ditemukan"
                }
              }
            }
          }
        }
      },
      "delete": {
        "summary": "Hapus data Example berdasarkan ID",
        "tags": ["Example"],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "integer", "example": 1 }
          }
        ],
        "responses": {
          "200": {
            "description": "Data Example berhasil dihapus",
            "content": {
              "application/json": {
                "example": {
                  "status": "success",
                  "message": "Data Example berhasil dihapus"
                }
              }
            }
          },
          "404": {
            "description": "Data tidak ditemukan",
            "content": {
              "application/json": {
                "example": {
                  "status": "error",
                  "message": "Example tidak ditemukan"
                }
              }
            }
          }
        }
      }
    }
  }
}
